<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rodrigo.studyjam_tarea2.MainActivity"

    android:background="#db000000">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:hint="0"
        android:textColorHint="#fff"
        android:inputType="number"
        android:textColor="#dfd5d5"
        android:textSize="50dp"
        android:layout_above="@+id/tableLayout"
        android:layout_marginBottom="0dp" />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2B2B2B"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button00"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="7"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button01"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="8"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button02"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="9"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button03"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt2"
                android:onClick="onClickOperator"
                android:text="รท"
                android:textColor="#ffff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="4"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="5"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="6"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt2"
                android:onClick="onClickOperator"
                android:text="ร"
                android:textColor="#ffff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button20"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="1"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="2"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button22"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt1"
                android:onClick="onClickNumber"
                android:text="3"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button23"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt2"
                android:onClick="onClickOperator"
                android:text="-"
                android:textColor="#ffff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button30"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt2"
                android:onClick="onClickNumber"
                android:text="0"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button31"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt2"
                android:onClick="onClickAc"
                android:text="AC"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button32"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt2"
                android:onClick="onClickEqual"
                android:text="="
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button33"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bt2"
                android:onClick="onClickOperator"
                android:text="+"
                android:textColor="#ffff"
                android:textSize="20dp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
